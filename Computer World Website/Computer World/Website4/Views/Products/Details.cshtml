@model Website4.Models.Product

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Ürün Detayları</title>
</head>
<body>
    <div>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Pname)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Pname)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Explanation)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Explanation)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Price)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Price)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Quantity)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Quantity)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Image_)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Image_)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Status_)
            </dt>
    
            <dd>
                @{
                    if (Model.Status_ == false)
                    {
                        <h6>Var</h6>
                    }
                    else
                    {
                        <h6>Yok</h6>
                    }
                }
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Category1.Cname)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Category1.Cname)
            </dd>
    
            <dt>
                @Html.DisplayNameFor(model => model.Model.Mname)
            </dt>
    
            <dd>
                @Html.DisplayFor(model => model.Model.Mname)
            </dd>
    
        </dl>
    </div>
    <p>
        | <a href="@Url.Action("Edit","Products",new { id = Model.id })" class="btn btn-primary"><i class='bx bxs-edit'></i> Değiştir </a> |
    </p>
</body>
</html>
