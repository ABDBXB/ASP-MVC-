@model IEnumerable<Website4.Models.Model>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Modeller Listesi</h2>

<p>
    @Html.ActionLink("Yeni Model Ekle", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Mname)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Brand.Bname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Mname)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Brand.Bname)
        </td>
        <td>
            <a href="@Url.Action("Edit","Models",new { id = item.id })" class="btn btn-primary"><i class='bx bxs-edit'></i> Değiştir </a> |
            <a href="@Url.Action("Details","Models",new { id = item.id })" class="btn btn-secondary"><i class='bx bx-list-ul'></i> Detay</a> |
            <a href="@Url.Action("Delete","Models",new { id = item.id })" class="btn btn-danger"><i class='bx bx-x-circle'></i> Sil</a>
        </td>
    </tr>
}

</table>
