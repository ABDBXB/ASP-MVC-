@model IEnumerable<Website4.Models.OrderDetail>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Yeni Oluştur", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PTotalPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Order.DeliveryAdrees)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Product.Pname)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PTotalPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Order.DeliveryAdrees)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Product.Pname)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
