
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <style>
        body {
            background-image: url('../../Images/ForgetPassword/4850037.jpg');
            background-size: cover;
            background-attachment: fixed;
        }

        .RegisterLayer {
            border-right: 2px #F3C04A solid;
            border-left: 2px #F3C04A solid;
            border-bottom: 2px #F3C04A solid;
            background-color: #fff;
            margin: 0px auto;
            width: 60%;
            box-shadow: 2px 2px 5px rgba(0,0,0,0.2);
            border-radius: 15px;
        }

        .buttonDiv {
            text-align: left;
            width: 120px;
        }

            .buttonDiv .bx-mail-send {
                color: green;
                opacity: 0;
                position: relative;
                top: 10px;
                right: 20px;
                transition: 0.4s;
            }

            .buttonDiv:hover .bx {
                opacity: 1;
                right: 0px;
                font-size: 30px;
            }

        .FormPage {
            text-align: center;
            padding: 20px;
            width: 100%;
            color: #000;
        }

            .FormPage input {
            }

            .FormPage img {
                width: 60%;
                margin: 0px auto;
                text-align: center;
            }
    </style>
    <meta charset="utf-8">
    <link href="https://unpkg.com/boxicons@2.0.7/css/boxicons.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <title>Şifre Yenileme</title>



</head>

<body>
    <div class="container" style="margin: 50px  auto;">
        <div class="RegisterLayer">


            <div class="FormPage">
                <!--form page-->
                <form class="box" method="post">
                    <h4 style="font-family:Consolas, 'Andale Mono', 'Lucida Console', 'Lucida Sans Typewriter', Monaco, 'Courier New', 'monospace'">Şifre Yenileme</h4> <hr />
                    <input type="text" name="Email" placeholder="Email" class="form-control">
                    @* Hata İçeriğine Göre Hatayi Gösteriyoruz  *@
                    @if (@ViewBag.NoMember == "Girdiniz Email Hiç Bir Kullanıcıya Ait Değil")
                    {
                        <h5 style="color: red;">@ViewBag.NoMember <i class="bx bxs-message-square-x"></i></h5>
                    }
                    else if (@ViewBag.NoMember == "Yeni Şifreniz Emailinize Göderildi")
                    {
                        <h5 style="color: green;">@ViewBag.NoMember <i class='bx bxs-message-square-check'></i></h5>
                    }
                    <br />
                    <div class="g-recaptcha" data-sitekey="6LcCEQ4bAAAAAKIeSISi6F8I2qeM5uFU6rv8zrPA"></div>
                    <h5 style="color: red;">@ViewBag.Message</h5>
                    <div class="buttonDiv">
                        <input type="submit" name="" value="Gönder" class="btn btn-outline-success" style="transition: 0.5s;"><i class="bx bx-mail-send"></i>
                    </div>

                    @* Sonuçlara Göre Fotoğraf Gösteriyoruz *@
                    @if (@ViewBag.NoMember == "Girdiniz Email Hiç Bir Kullanıcıya Ait Değil")
                    {


                        <img src="~/Images/ForgetPassword/20943400.jpg" />
                    }
                    else if (@ViewBag.NoMember == "Yeni Şifreniz Emailinize Göderildi")
                    {

                        <img src="~/Images/ForgetPassword/5138237.jpg" />
                    }
                    else
                    {
                        <img src="~/Images/ForgetPassword/19197471.jpg" alt="">
                    }

                </form>

            </div>


        </div>
    </div>
    <script src='https://www.google.com/recaptcha/api.js' type="text/javascript"></script>
</body>
</html>
